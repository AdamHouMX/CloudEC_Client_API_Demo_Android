<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="@dimen/color_item_width"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:layout_width="@dimen/color_item_width"
        android:layout_height="@dimen/color_item_height">

    <ImageView
        android:id="@+id/icon"
        android:layout_width="@dimen/color_item_size"
        android:layout_height="@dimen/color_item_size"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="@dimen/color_item_margin_left"
        android:layout_centerVertical="true"
        />

    <TextView
        android:id="@+id/title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:singleLine="true"
        android:textColor="@color/color_item_text_write"
        android:layout_toRightOf="@+id/icon"
        android:layout_marginLeft="@dimen/color_item_margin_left"
        android:textSize="@dimen/color_item_text_size"
        android:layout_centerVertical="true"
        />
    </RelativeLayout>
</RelativeLayout>