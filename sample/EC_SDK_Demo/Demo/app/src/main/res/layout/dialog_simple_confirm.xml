<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/eDialogStyle">

    <TextView android:id="@+id/dialog_message"
        style="@style/center_content_title"
        android:text="@string/info"/>

    <View
        android:layout_marginTop="@dimen/dp4"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/divider" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView android:id="@+id/dialog_leftbutton"
            style="@style/center_confirm"
            android:layout_weight="1"
            android:visibility="gone"
            android:text="@string/cancel" />

        <View android:id="@+id/dialog_divide"
            android:visibility="gone"
            android:layout_width="@dimen/dp1"
            android:background="@color/divider"
            android:layout_height="match_parent" />

        <TextView android:id="@+id/dialog_rightbutton"
            style="@style/center_confirm"
            android:layout_weight="1"
            android:text="@string/sure" />

    </LinearLayout>

</LinearLayout>
