<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="wrap_content"
    android:layout_height="match_parent"
    >

    <ListView
        android:id="@+id/color_select_list"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:divider="@drawable/list_item_divider"
        android:dividerHeight="1dp"
        android:scrollbars="none"
        android:background="#3a3a3a"
        android:scrollingCache="false" />

    <ImageView
        android:id="@+id/array_down"
        android:layout_width="@dimen/array_down_width"
        android:layout_height="@dimen/array_down_height"
        android:background="@drawable/down_arrow_drawable"
        android:layout_below="@+id/color_select_list"
        android:layout_centerHorizontal="true"
        />
</RelativeLayout>